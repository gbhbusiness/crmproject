<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="whatsapp_template_button_inherit_form_view" model="ir.ui.view">
        <field name="name">whatsapp.template.button.views.form.inherit</field>
        <field name="model">whatsapp.template.button</field>
        <field name="inherit_id" ref="whatsapp.whatsapp_template_button_view_form"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="url_type"]' position='after'>
                <field name="flow_id" readonly="button_type != 'flow'"/>
                <field name="screen_id" readonly="button_type != 'flow'"/>
            </xpath>
        </field>
    </record>

    <record id="whatsapp_template_button_inherit_tree_view" model="ir.ui.view">
        <field name="name">whatsapp.template.button.views.tree.inherit</field>
        <field name="model">whatsapp.template.button</field>
        <field name="inherit_id" ref="whatsapp.whatsapp_template_button_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="url_type"]' position='after'>
                <field name="flow_id" readonly="button_type != 'flow'"/>
                <field name="screen_id" readonly="button_type != 'flow'"/>
            </xpath>
        </field>
    </record>
</odoo>