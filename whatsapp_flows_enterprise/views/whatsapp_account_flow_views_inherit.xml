<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="provider_base_inherit_form_view" model="ir.ui.view">
        <field name="name">whatsapp.account.inherit.form</field>
        <field name="model">whatsapp.account</field>
        <field name="inherit_id" ref="whatsapp.whatsapp_account_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_sync_whatsapp_account_templates']" position="after">
                <div class="content-group">
                    <button name="sync_whatsapp_flows"
                            type="object"
                            class="btn-link p-1"
                            icon="fa-refresh">
                        Sync Flows
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>